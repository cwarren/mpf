<h1>Listing service_packages</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Url Title</th>
    <th>Description</th>
    <th>Icon</th>
    <th>Is live</th>

    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @service_packages.each do |service_package| %>
  <tr>
  
    <td><%= service_package.title %></td>
    <td><%= service_package.urltitle %></td>
    <td><%= service_package.description %></td>
    <td><% if service_package.icon.exists? then %>
      <%= image_tag service_package.icon.url(:base) %>
    <% else %>
      NO ICON! (should never be seen!)
    <% end %></td>
    <td><%= service_package.is_live %></td>
  
    <td><%= link_to 'Show', admin_service_package_path(service_package) %></td>
    <td><%= link_to 'Edit', edit_admin_service_package_path(service_package) %></td>
    <td><%= link_to 'Destroy', admin_service_package_path(service_package), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Service package', new_admin_service_package_path %>
